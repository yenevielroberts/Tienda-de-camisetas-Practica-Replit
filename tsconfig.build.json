{
  "compilerOptions": {
    "incremental": false,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": false,
    "noImplicitAny": false,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "jest"],
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "server/main.ts",
    "server/app.module.ts",
    "server/database/**/*.ts",
    "server/health/**/*.ts",
    "server/messages/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "client",
    "test",
    "**/*.spec.ts",
    "server/index.ts",
    "server/routes.ts",
    "server/storage.ts",
    "server/vite.ts",
    "server/static.ts"
  ]
}

